{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": "src",
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "typeRoots" : ["./node_modules/@types", "./types"]
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "src/public"
  ]
}